server {
  listen   <%= node['nginx']['port'] -%>;
  server_name  <%= node['ipaddress'] %>;

  access_log  <%= node['nginx']['log_dir'] %>/localhost.access.log combined;
  error_log   <%= node['nginx']['log_dir'] %>/localhost.error.log;

  location / {
    root   /var/www/html;
    index  index.html index.htm;
  }
}

