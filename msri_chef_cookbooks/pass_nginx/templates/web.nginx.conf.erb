        #location ~ /\.ht {
        #    deny  all;
        #}
    }

    include /opt/nginx/conf.d/map.event.conf;
    include /opt/nginx/conf.d/map.video.conf;
    include /opt/nginx/conf.d/map.committee.conf;
    include /opt/nginx/conf.d/map.speaker.conf;
    include /opt/nginx/conf.d/map.legacy.conf;
    include /opt/nginx/conf.d/map.friendly.conf;

    include /opt/nginx/conf.d/proxy.conf;
    include /opt/nginx/sites-enabled/*;

    geo $maintenance_ip {
      default 0;
      24.4.3.158 1;
    }

